generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model User {
  userId           String            @id @default(uuid()) @map("user_id")
  username         String
  email            String            @unique
  password         String
  role             Role
  points           Int               @default(0)
  isVerified       Boolean           @default(false)
  imageUrl         String?           @map("image_url")
  codes            Code[]
  families         FamilyMember[]
  UserCourse       UserCourse[]
  Settings         Settings[]
  Location         Location[]
  Test             Test[]
  UserApplication  UserApplication[]
  userAchievements UserAchievement[]

  @@map("user")
}

model Family {
  familyId String         @id @default(uuid()) @map("family_id")
  name     String
  members  FamilyMember[]

  @@map("family")
}

model FamilyMember {
  familyId String @map("family_id")
  userId   String @map("user_id")
  family   Family @relation(fields: [familyId], references: [familyId], onDelete: Cascade)
  user     User   @relation(fields: [userId], references: [userId], onDelete: Cascade)

  @@id([familyId, userId])
  @@map("family_member")
}

model Code {
  codeId    String   @id @default(uuid()) @map("code_id")
  userId    String   @map("user_id")
  code      String   @db.VarChar(10)
  type      CodeType
  createdAt DateTime @default(now()) @map("created_at")
  expiresAt DateTime @map("expires_at")
  isUsed    Boolean  @default(false) @map("is_used")
  user      User     @relation(fields: [userId], references: [userId], onDelete: Cascade)

  @@map("code")
}

model Course {
  courseId      String       @id @default(uuid()) @map("course_id")
  title         String
  description   String?
  imageUrl      String?      @map("image_url")
  totalSections Int?         @map("total_sections")
  tags          CourseTag[]
  sections      Section[]
  userCourses   UserCourse[]
  Test          Test[]

  @@map("course")
}

model Tag {
  tagId   String      @id @default(uuid()) @map("tag_id")
  name    String      @unique
  courses CourseTag[]

  @@map("tag")
}

model CourseTag {
  courseId String @map("course_id")
  tagId    String @map("tag_id")
  course   Course @relation(fields: [courseId], references: [courseId], onDelete: Cascade)
  tag      Tag    @relation(fields: [tagId], references: [tagId], onDelete: Cascade)

  @@id([courseId, tagId])
  @@map("course_tag")
}

model Section {
  sectionId         String             @id @default(uuid()) @map("section_id")
  courseId          String             @map("course_id")
  title             String
  description       String?
  imageUrl          String?            @map("image_url")
  questionTemplates QuestionTemplate[]
  course            Course             @relation(fields: [courseId], references: [courseId], onDelete: Cascade)
  Test              Test[]

  @@map("section")
}

model Test {
  testId    String     @id @default(uuid()) @map("test_id")
  questions Json
  results   Json?
  status    TestStatus
  score     Int?       @default(0)
  updatedAt DateTime   @updatedAt @map("updated_at")

  sectionId String  @map("section_id")
  section   Section @relation(fields: [sectionId], references: [sectionId], onDelete: Cascade)

  courseId String @map("course_id")
  course   Course @relation(fields: [courseId], references: [courseId], onDelete: Cascade)

  userId String
  user   User   @relation(fields: [userId], references: [userId], onDelete: Cascade)

  @@map("test")
}

enum TestStatus {
  PASSED
  FAILED
  PENDING
}

model QuestionTemplate {
  templateId  String             @id @default(uuid()) @map("template_id")
  sectionId   String             @map("section_id")
  text        String
  explanation String?
  instances   QuestionInstance[]
  section     Section            @relation(fields: [sectionId], references: [sectionId], onDelete: Cascade)

  @@map("question_template")
}

model QuestionInstance {
  instanceId    String           @id @default(uuid()) @map("instance_id")
  templateId    String           @map("template_id")
  answerOptions Json             @map("answer_options")
  correctAnswer String           @map("correct_answer")
  variables     Json?
  template      QuestionTemplate @relation(fields: [templateId], references: [templateId], onDelete: Cascade)

  @@map("question_instance")
}

model UserCourse {
  userId            String    @map("user_id")
  courseId          String    @map("course_id")
  completedSections Int?      @default(0) @map("completed_sections")
  lastAccessed      DateTime? @map("last_accessed")
  course            Course    @relation(fields: [courseId], references: [courseId], onDelete: Cascade)
  user              User      @relation(fields: [userId], references: [userId], onDelete: Cascade)

  @@id([userId, courseId])
  @@map("user_course")
}

enum CodeType {
  EMAIL
  PHONE
  PASSWORD_RESET
  INVITE
}

enum Role {
  PARENT
  CHILD
}

enum Language {
  KZ
  RU
  EN
}

model Settings {
  userId String @id
  user   User   @relation(fields: [userId], references: [userId], onDelete: Cascade)

  language    Language @default(EN) @map("language")
  theme       String   @default("light") @map("theme")
  isAppAdmin  Boolean  @default(false) @map("is_app_admin")
  dailyLimit  Int      @default(3) @map("daily_limit")
  sessionTime Int      @default(60) @map("session_time")
  hasAnimated Boolean  @default(false) @map("has_animated")

  @@map("settings")
}

model Location {
  locationId String   @id @default(uuid()) @map("location_id")
  userId     String   @map("user_id")
  latitude   Float
  longitude  Float
  updatedAt  DateTime @default(now()) @map("updated_at")

  user User @relation(fields: [userId], references: [userId], onDelete: Cascade)

  @@map("location")
}

model Application {
  packageName     String            @id @map("package_name")
  appName         String            @map("app_name")
  iconPath        String?           @map("icon_path")
  UserApplication UserApplication[]
}

model UserApplication {
  isBlocked Boolean @default(true) @map("is_blocked")

  userId String @map("user_id")
  user   User   @relation(fields: [userId], references: [userId], onDelete: Cascade)

  packageName String
  application Application @relation(fields: [packageName], references: [packageName], onDelete: Cascade)

  @@id([userId, packageName])
  @@map("user_application")
}

model Achievement {
  achievementId      String  @id @default(uuid()) @map("achievement_id")
  achievementIconUrl String? @map("achievement_icon_url")
  achievementBody    Json    @map("achievement_body")

  UserAchievements UserAchievement[]

  @@map("achievement")
}

model UserAchievement {
  userId String @map("user_id")
  user   User   @relation(fields: [userId], references: [userId], onDelete: Cascade)

  achievementId String
  achievements  Achievement @relation(fields: [achievementId], references: [achievementId], onDelete: Cascade)

  isAchieved Boolean @default(false) @map("is_achieved")

  @@id([userId, achievementId])
  @@map("user_achievement")
}
